//dataBinding(not dependencies)
dataBinding {
    enabled = true //kotlin Project -> need kapt plugin
}

//Dagger2
implementation 'com.google.dagger:dagger-android:2.27'
implementation 'com.google.dagger:dagger-android-support:2.27'
//Dagger2 - Java
annotationProcessor 'com.google.dagger:dagger-android-processor:2.27'
annotationProcessor 'com.google.dagger:dagger-compiler:2.27'
//Dagger2 - Kotlin
kapt 'com.google.dagger:dagger-android-processor:2.27'
kapt 'com.google.dagger:dagger-compiler:2.27'

// Koin for Kotlin
implementation "org.koin:koin-core:2.1.6"
// Koin Extended & experimental features
implementation "org.koin:koin-core-ext:2.1.6"
// Koin for Unit tests
testImplementation "org.koin:koin-test:2.1.6"

// Retrofit2
implementation 'com.squareup.retrofit2:retrofit:2.6.4'
implementation 'com.squareup.retrofit2:converter-gson:2.6.4'
// Retrofit2 - RxJava
implementation 'com.gitbug.akarnokd:rxjava3-retrofit-adapter:3.0.0-RC8'

// RxJava
implementation "io.reactivex.rxjava3:rxjava:3.0.0"
implementation "io.reactivex.rxjava3:rxandroid:3.0.0"
implementation "io.reactivex.rxjava2:rxkotlin:2.4.0"

// timber
implementation "com.jakewharton.timber:timber:4.7.1"

// ViewModel and LiveData
implementation "androidx.lifecycle:lifecycle-extensions:2.2.0"

// stetho
implementation 'com.facebook.stetho:stetho:1.5.1'
implementation 'com.facebook.stetho:stetho-okhttp3:1.5.1'

// Coroutine
implementation "org.jetbrains.kotlinx:kotlinx-coroutines-core:1.3.7"
implementation "org.jetbrains.kotlinx:kotlinx-coroutines-core-common:1.3.7"
implementation "org.jetbrains.kotlinx:kotlinx-coroutines-android:1.3.7"

// multidex
defaultConfig { 
		...
		multiDexEnabled true
}
implementation 'androidx.multidex:multidex:2.0.1'

// Room
implementation "androidx.room:room-runtime:2.2.5"
// for java
annotationProcessor "androidx.room:room-compiler:2.2.5"
// for kotlin
apply plugin: 'kotlin-kapt'
...
kapt "androidx.room:room-compiler:2.2.5"
//
// optional - Kotlin Extensions and Coroutines support for Room
implementation "androidx.room:room-ktx:2.2.5"

// Navigation
plugin id 'androidx.navigatgion.safeargs'
classpath "androidx.navigation:navigation-safe-args-gradle-plugin:$navigation_version"
implementation "androidx.navigation:navigation-fragment-ktx:$navigation_version"
implementation "androidx.navigation:navigation-ui-ktx:$navigation_version"

// coroutine
implementation 'org.jetbrains.kotlinx:kotlinx-coroutines-android:1.3.9'

// jsoup
implementation 'org.jsoup:jsoup:1.11.3'

// glide
implementation 'com.github.bumptech.glide:glide:4.12.0'
annotationProcessor 'com.github.bumptech.glide:compiler:4.12.0'